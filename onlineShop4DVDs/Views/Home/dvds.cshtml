@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor access
@model onlineShop4DVDs.Models.ShopModelView
@{
    ViewData["Title"] = "dvds";
}


<!-- ##### Breadcumb Area Start ##### -->
<section class="breadcumb-area bg-img bg-overlay" style="background-image: url('@Url.Content("~/UP-Assets/img/bg-img/breadcumb3.jpg")');">
    <div class="bradcumbContent">
        <p>See Our Latest</p>
        <h2>New DVDs</h2>
    </div>
</section>
<!-- ##### Breadcumb Area End ##### -->

<section class="album-catagory section-padding-100-0">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="browse-by-catagories catagory-menu d-flex flex-wrap align-items-center mb-70">
                    <a href="#" data-filter="*" class="active">Browse All</a>
                    @foreach (var category in Model.ShopCategory)
                    {
                        <a href="#" data-filter="@("." + category.CategoryName.ToLower())">@category.CategoryName</a>
                    }

                </div>
            </div>
        </div>

        <div class="row oneMusic-albums">
            @foreach (var product in Model.ShopProduct)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 col-12 mt-5 single-album-item @product.Category.CategoryName.ToLower()">
                    <div class="card border-2 h-100">
                        <img src="~/UP-Assets/img/bg-img/s1.jpg" class="card-img-top" alt="@product.Title" style="height: 150px; object-fit: cover;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@product.Title</h5>
                            <p class="card-text">
                                @product.Description
                                <a asp-action="productDetails" asp-controller="Home" asp-route-id="@product.ProductId">more..</a>
                            </p>
                            <div class="mt-auto d-flex justify-content-between">
                                @if (@access.HttpContext.Session.GetString("UserName") != null)
                                {

                                    <a asp-action="cart" asp-controller="Home" asp-route-id="@product.ProductId" class="btn btn-sm btn-dark">Add to Cart <i class="icon-shopping-cart"></i></a>
                                }
                                else
                                {
                                    <a href="#" onclick="loginAlert()" class="btn btn-sm btn-dark">Add to Cart <i class="icon-shopping-cart"></i></a>
                                }
                                <a href="#" class="btn btn-sm btn-outline-dark">Favorite <i class="icon-heart"></i></a>
                            </div>
                        </div>
                    </div>
                </div>

            }

        </div>
    </div>
</section>


